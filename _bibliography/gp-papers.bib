	title = {VaryMinions: Leveraging RNNs to Identify Variants in Variability-intensive Systems{\textquoteright} Logs},
	website= {https://researchportal.unamur.be/en/publications/varyminions-leveraging-rnns-to-identify-variants-in-variability-i},
